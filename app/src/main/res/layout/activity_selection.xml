<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_txt_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:backgroundTint="@color/background_color"
    tools:context=".Selection">

    <ImageButton
        android:id="@+id/amis_listes"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="612dp"
        android:adjustViewBounds="false"
        android:background="@color/background_color"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lists"
        tools:srcCompat="@drawable/lists" />

    <ImageButton
        android:id="@+id/notifications2"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="78dp"
        android:adjustViewBounds="false"
        android:background="@color/background_color"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notifications"
        tools:srcCompat="@drawable/notifications" />

    <ImageButton
        android:id="@+id/selection_amis"
        android:layout_width="75dp"
        android:layout_height="61dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="78dp"
        android:adjustViewBounds="false"
        android:background="@color/background_color"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/friends"
        tools:srcCompat="@drawable/friends" />

    <ImageButton
        android:id="@+id/id_button_profil"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="612dp"
        android:adjustViewBounds="false"
        android:background="@color/background_color"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_profil"
        tools:srcCompat="@drawable/icon_profil" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="397dp"
        android:layout_height="64dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="511dp"
        android:text="Retrouvez vos collègues par :"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_button_interet"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@color/deep_blue"
        android:text="Intérêt"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/id_button_cours"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@color/deep_blue"
        android:text="Cours"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_button_interet" />

    <Button
        android:id="@+id/id_button_club"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:background="@color/deep_blue"
        android:text="Club"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_button_cours"
        app:layout_constraintVertical_bias="0.165" />

</androidx.constraintlayout.widget.ConstraintLayout>